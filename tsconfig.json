{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react",
        "outDir": "dist",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}